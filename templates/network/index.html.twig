{% extends 'base.html.twig' %}

{% block title %}Network index{% endblock %}

{% block body %}
    <h1>Network index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>IsGuest</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for network in networks %}
            <tr>
                <td>{{ network.id }}</td>
                <td>{{ network.name }}</td>
                <td>{{ network.isGuest ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('network_show', {'id': network.id}) }}">show</a>
                    <a href="{{ path('network_edit', {'id': network.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('network_new') }}">Create new</a>
{% endblock %}
